{
  "name": "@cmdbrew/active_admin_bootstrap",
  "version": "0.1.0",
  "description": "JavaScript dependencies for gem `active_admin_bootstrap`",
  "main": "src/base.js",
  "files": [
    "./src/**/*"
  ],
  "repository": "git://github.com/cmdbrew/active_admin_bootstrap.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": "I-Lung Lee <nelson@cmdbrew.com>",
  "license": "See LICENSE.md",
  "scripts": {
    "prepublishOnly": "rm -rf src && cp -R app/javascript/active_admin_bootstrap src && cp -R app/assets/stylesheets/active_admin_bootstrap src/scss",
    "lint": "npx stylelint 'app/assets/stylesheets/**/*.scss' && standard",
    "fix": "standard --fix",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "standard": "^16.0.3",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "@rails/actiontext": "^6.1.4",
    "@rails/ujs": "^6.1.4",
    "bootstrap": "^5.0.1",
    "bootstrap-icons": "^1.5.0",
    "flatpickr": "^4.6.9",
    "resolve-url-loader": "^4.0.0",
    "sortablejs": "^1.14.0",
    "tom-select": "^1.7.5",
    "trix": "^1.3.1"
  },
  "standard": {
    "ignore": [
      "/website/**/*.js"
    ]
  }
}
