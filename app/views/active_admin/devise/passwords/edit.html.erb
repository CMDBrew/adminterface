<% content_for :title do %>
  <%= title t("active_admin.devise.change_password.title") %>
<% end %>

<%= devise_error_messages! %>
<%= active_admin_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  f.inputs do
    f.input :password, visibility: true
    f.input :password_confirmation, visibility: true
    f.input :reset_password_token, as: :hidden, input_html: { value: resource.reset_password_token }
  end
  f.actions do
    f.action :submit,
             label: t("active_admin.devise.change_password.submit"),
             wrapper_html: {class: "d-block w-100"},
             button_html: {
               value: t("active_admin.devise.change_password.submit"),
               class: "btn btn-primary w-100"
             }
  end
end %>
